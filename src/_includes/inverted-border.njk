<div class="inverted-border-wrapper">
	<div class="inverted-border-title one">
		<h1>
			CSS
			<br >Triggers
		</h1>
	</div>

	<div class="inverted-border-container">
		{% for i in range(3) %}
			<div></div>
		{% endfor %}
	</div>

	<div class="inverted-border-title two">
		<h1>
			CSS
			<br >Triggers
		</h1>
	</div>
</div>

<script type="module">
	import { gsap } from 'gsap';

	const children = document.querySelectorAll('.inverted-border-container > div');
	const container = document.querySelector('.inverted-border-container');

	gsap.from(container, {
		duration: 1,
		scale: 0.9,
		opacity: 0,
		ease: 'power3.inOut',
	});

	gsap.from(children, {
		duration: 1,
		scale: 0,
		stagger: 0.2,
		ease: 'power3.inOut',
	});


</script>

<style>
	.inverted-border-wrapper {
		position: relative;
		width: 100%;
		padding: 32px;
	}

	.inverted-border-container {
		margin-inline: auto;
		border: 4px solid var(--color-gray-20);
		height: 100%;
		transform: translate(0px, 0px);
		width: min(100%, 300px);
		aspect-ratio: 1/2;
		display: flex;
		flex-direction: column;
	}

	.inverted-border-container > div:nth-child(1) {
		flex: 1;
		background-color: var(--red);
	}

	.inverted-border-container > div:nth-child(2) {
		flex: 1;
		background-color: var(--purple);
	}

	.inverted-border-container > div:nth-child(3) {
		flex: 1;
		background-color: var(--blue);
	}

	.inverted-border-title {
		position: absolute;
		left: 0;
		top: 0;
		width: 100%;
		height: 100%;
		display: flex;
		justify-content: center;
		align-items: center;
		font-size: clamp(2.7994rem, 2.4462rem + 1.7658vw, 5.8147rem);
		color: var(--color-gray-20);
		transition: transform 0.4s;
		transform: scale(1);
	}

	.inverted-border-wrapper:has(.inverted-border-title.two:hover) .inverted-border-title.one {
		transform: scale(0.92);
	}

	.inverted-border-title.one {
		mix-blend-mode: difference;
	}

	.inverted-border-title.two {
		transform: scale(1.02);
	}

	.inverted-border-title.two:hover {
		transform: scale(1.1);
	}

	.inverted-border-title h1 {
		margin: 0;
	}
</style>
